<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GolfCompanion.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="clr-namespace:GolfCompanion.Views"
    Title="GolfCompanion">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:StartupPage}"
        Route="StartupPage" />

    <ShellContent
        Title="Tee Selection"
        ContentTemplate="{DataTemplate views:TeeSelectionDialog}"
        Route="TeeSelectionDialog" />

    <ShellContent
        Title="Round Input"
        ContentTemplate="{DataTemplate views:RoundInputView}"
        Route="RoundInputView"/>

    <ShellContent
        Title="Shot Input"
        ContentTemplate="{DataTemplate views:ShotInputDialog}"
        Route="ShotInputDialog"/>

    <ShellContent
        Title="Search"
        ContentTemplate="{DataTemplate views:SearchPage}"
        Route="SearchPage"/>

</Shell>
